#include <stdio.h>

//This menu allows the user to select what they would like to do using standard input and scanf()
printf("Please select an option: \n");
printf("1) Encrypt message using rotation cipher given text and rotation amount\n");
printf("2) Decrypt message using rotation cipher given text and rotation amount\n");
printf("3) Encrypt message using substitution cipher given text and substitution\n");
printf("4) Decrypt message using substitution cipher given text and substitution\n");
printf("5) Decrypt message using rotation cipher given text only\n");
printf("6) Decrypt message using substitution cipher given text only\n");
printf("Selection:");

char c;
scanf("%c", &c);

switch(c)
{
    case '1': //do the stuff for 1
        break;
    case '2':
        break;
    case '3':
        break;
    case '4':
        break;
    case '5':
        break;
    case '6':
        break;
    default: printf("Unknown option %c\nPlease enter 1, 2, 3, 4, 5 or 6\n");
    
}
